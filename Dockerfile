# Используем образ Golang
FROM golang:1.23-alpine

# Устанавливаем рабочий каталог внутри контейнера
WORKDIR /app

# Копируем файлы проекта
COPY . .

# Устанавливаем зависимости
RUN go mod tidy

# Собираем приложение
RUN go build -o main .

# Открываем порт 8080
EXPOSE 8080

# Запуск приложения
CMD ["./main"]
